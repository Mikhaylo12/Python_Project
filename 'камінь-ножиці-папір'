import random


def гра_камінь_ножиці_папір():
    варіанти = ["Камінь", "Ножиці", "Папір"]

    гравець_перемоги = 0
    комп_перемоги = 0

    while True:
        гравець = input("Виберіть Камінь, Ножиці або Папір (для виходу введіть 'вийти'): ").capitalize()

        if гравець == 'Вийти':
            break

        if гравець not in варіанти:
            print("Некоректний вибір. Введіть Камінь, Ножиці або Папір.")
            continue

        комп_вибір = random.choice(варіанти)

        print(f"Гравець вибрав: {гравець}")
        print(f"Комп'ютер вибрав: {комп_вибір}")

        if гравець == комп_вибір:
            print("Нічия!")
        elif (гравець == "Камінь" and комп_вибір == "Ножиці") or \
             (гравець == "Ножиці" and комп_вибір == "Папір") or \
             (гравець == "Папір" and комп_вибір == "Камінь"):
            print("Гравець переміг!")
            гравець_перемоги += 1
        else:
            print("Комп'ютер переміг!")
            комп_перемоги += 1

        print(f"Гравець: {гравець_перемоги} перемог")
        print(f"Комп'ютер: {комп_перемоги} перемог")

    print("Гра завершена!")

гра_камінь_ножиці_папір()